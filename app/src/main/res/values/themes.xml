<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/biruPrimary</item>
    </style>

    <style name="MainActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/biruPrimary</item>
        <item name="colorPrimaryVariant">@color/biruPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/biruPrimary</item>
        <item name="colorSecondaryVariant">@color/biruPrimary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="AboutActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/biruPrimary</item>
        <item name="colorPrimaryVariant">@color/biruPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/biruPrimary</item>
        <item name="colorSecondaryVariant">@color/biruPrimary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="DetailActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/biruPrimary</item>
        <item name="colorPrimaryVariant">@color/biruPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/biruPrimary</item>
        <item name="colorSecondaryVariant">@color/biruPrimary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="text">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.isi">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.min">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.judul">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/biruPrimary</item>
    </style>

    <style name="text.bold">
        <item name="android:textStyle">bold</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.GameKu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GameKu" parent="Base.Theme.GameKu" />

</resources>